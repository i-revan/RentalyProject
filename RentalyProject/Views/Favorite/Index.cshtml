@model List<FavoriteItemVM>
<!-- content begin -->
<div class="no-bottom no-top zebra" id="content">
    <div id="top"></div>

    <!-- section begin -->
    <section id="subheader" class="jarallax text-light">
        <img src="~/assets/images/background/14.jpg" class="jarallax-img" alt="">
        <div class="center-y relative text-center">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <h1>My Favorite Cars</h1>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </section>
    <!-- section close -->

    <section id="section-settings" class="bg-gray-100">
        <div class="container">
            <div class="row">
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="col-lg-3 mb30">
                        <div class="card p-4 rounded-5">
                            <div class="profile_avatar">
                                <div class="profile_img">
                                    <img src="~/assets/images/profile/1.jpg" alt="">
                                </div>
                                <div class="profile_name">
                                    <h4>
                                        <span class="profile_username text-gray">@User.Identity.Name</span>
                                    </h4>
                                </div>
                            </div>
                            <div class="spacer-20"></div>
                            <ul class="menu-col">
                                <li><a href="account-dashboard.html"><i class="fa fa-home"></i>Dashboard</a></li>
                                <li><a href=""><i class="fa fa-user"></i>My Profile</a></li>
                                <li><a href="account-booking.html"><i class="fa fa-calendar"></i>My Orders</a></li>
                                <li><a href="account-favorite.html" class="active"><i class="fa fa-calendar"></i>My Favorite Cars</a></li>
                                <li><a asp-controller="account" asp-action="logout"><i class="fa fa-sign-out"></i>Sign Out</a></li>
                            </ul>
                        </div>
                    </div>
                }

                <div class="col-lg-9">
                    @if(Model.Count == 0)
                    {
                        <p>Don't have any favorite car yet? <a asp-controller="home" asp-action="cars">Explore more</a></p>
                    }
                    @foreach(FavoriteItemVM car in Model)
                    {
                        <div class="de-item-list no-border mb30">
                            <div class="d-img">
                                <img src="~/assets/images/cars/@car.ImageUrl" class="img-fluid" alt="">
                            </div>
                            <div class="d-info">
                                <div class="d-text">
                                    <h4>@car.Marka</h4>
                                    <div class="d-atr-group">
                                        <ul class="d-atr">
                                            <li><span>Seats:</span>@car.Seats</li>
                                            <li><span>Luggage:</span>@car.Luggage</li>
                                            <li><span>Doors:</span>@car.Doors</li>
                                            <li><span>Fuel:</span>@car.FuelType</li>
                                            <li><span>Engine:</span>@car.EngineCapacity</li>
                                            <li><span>Type:</span>@car.BodyType</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="d-price">
                                Daily rate from <span>$@String.Format("{0:#,##0}", car.RentPrice)</span>
                                <a class="btn-main" asp-controller="rent" asp-action="details" asp-route-id="@car.Id">Rent Now</a>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    }

                    
                </div>
            </div>
        </div>
    </section>


</div>
<!-- content close -->
