@model ResetPasswordVM
@{
    Layout = null;
}
<link href="~/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" id="bootstrap">

<div class="container">
    <br /> <br />
    <h1>Reset Password</h1>
    <form method="post">
        <div class="form-group">
            <label asp-for="Password">Enter your new password</label><br />
            <input class="my-2" asp-for="Password" />
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">Confirm Password</label><br />
            <input class="my-2" asp-for="ConfirmPassword" />
            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>

        </div>
        
        <button type="submit" class="btn btn-primary">Update Password</button>
    </form>
</div>
