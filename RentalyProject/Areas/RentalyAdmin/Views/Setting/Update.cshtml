@using RentalyProject.ViewModels.Settings;
@model UpdateSettingVM
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Setting</h4>
            <a class="btn btn-dark" asp-controller="setting" asp-action="index">Back</a>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Value">Name</label>
                    <input asp-for="Value" class="form-control" placeholder="Value" value="@Model.Value">
                    <span class="text-danger" asp-validation-for="Value"></span>
                </div>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button class="btn btn-light" asp-controller="setting" asp-action="index">Cancel</button>
            </form>
        </div>
    </div>
</div>
