@using RentalyProject.ViewModels.Employees;

@model UpdateEmployeeVM
<div class="container-fluid page-body-wrapper">

    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">

                <div class="col-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Create Employee</h4>
                            <form class="forms-sample" method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label asp-for="Name">Name</label>
                                    <input asp-for="Name" class="form-control" placeholder="Name">
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Surname">Surname</label>
                                    <input asp-for="Surname" class="form-control" placeholder="Surname">
                                    <span class="text-danger" asp-validation-for="Surname"></span>
                                </div>
                                <div class="form-group">
                                    <select asp-for="PositionId" class="form-control" asp-items="new SelectList(ViewBag.Positions,nameof(Position.Id),nameof(Position.Name))">
                                        <option disabled selected>Select Position please</option>
                                    </select>
                                    <span class="text-danger" asp-validation-for="PositionId"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="FacebookLink">Facebook</label>
                                    <input asp-for="FacebookLink" class="form-control" placeholder="Facebook Link">
                                    <span class="text-danger" asp-validation-for="FacebookLink"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="TwitterLink">Twitter</label>
                                    <input asp-for="TwitterLink" class="form-control" placeholder="Twitter Link">
                                    <span class="text-danger" asp-validation-for="TwitterLink"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="LinkedinLink">Linkedin</label>
                                    <input asp-for="LinkedinLink" class="form-control" placeholder="Linkedin Link ">
                                    <span class="text-danger" asp-validation-for="LinkedinLink"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="PinterestLink">Pinterest</label>
                                    <input asp-for="PinterestLink" class="form-control" placeholder="PinterestLink">
                                    <span class="text-danger" asp-validation-for="PinterestLink"></span>
                                </div>
                                <div class="form-group">
                                    <img src="~/assets/images/team/@Model.ImageUrl" />
                                    <input asp-for="ImageUrl" value="@Model.ImageUrl" class="d-none"/>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Photo">Photo</label>
                                    <input asp-for="Photo" class="form-control" placeholder="Photo">
                                    <span class="text-danger" asp-validation-for="Photo"></span>
                                </div>
                                <button type="submit" class="btn btn-primary me-2">Create</button>
                                <a asp-action="index" asp-controller="employee" class="btn btn-light">Cancel</a>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <!-- content-wrapper ends -->
        <!-- partial:../../partials/_footer.html -->
        <!-- partial -->
    </div>
    <!-- main-panel ends -->
</div>

