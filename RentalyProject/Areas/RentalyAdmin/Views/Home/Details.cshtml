@model Reservation
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Reservation</h4>
            <a class="btn btn-dark" asp-controller="home" asp-action="index">Back</a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                User
                            </th>
                            <th>
                                Car
                            </th>
                            <th>
                                Pickup Location
                            </th>
                            <th>
                                Drop Off Location
                            </th>
                            <th>
                                Pickup Date
                            </th>
                            <th>
                                Return Date
                            </th>
                            <th>
                                Total payment
                            </th>
                            <th>
                                Reservation date
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @Model.Id
                            </td>
                            <td>
                                @Model.AppUser.Name @Model.AppUser.Surname
                            </td>
                            <td>
                                @Model.Car.Model.Marka.Name @Model.Car.Model.Name
                            </td>
                            <td>
                                @Model.PickUpLocation
                            </td>
                            <td>
                                @Model.DropOffLocation
                            </td>
                            <td>
                                @Model.PickUpDate.ToString("dd MMMM yyyy hh:mm")
                            </td>
                            <td>
                                @Model.ReturnDate.ToString("dd MMMM yyyy hh:mm")
                            </td>
                            <td>
                                $ @((Model.ReturnDate - Model.PickUpDate).Days * Model.Car.RentPrice)
                            </td>
                            <td>
                                @Model.CreatedAt.ToString("dd MMMM yyyy hh:mm tt")
                            </td>
                            <td>
                                <a asp-controller="home" asp-action="accept" asp-route-id="@Model.Id" class="btn btn-success">Accept</a>
                                <a asp-controller="home" asp-action="decline" asp-route-id="@Model.Id" class="btn btn-danger">Decline</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>





