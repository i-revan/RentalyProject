@model Category
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Category</h4>
            <a asp-controller="category" asp-action="index" class="btn btn-dark">Back</a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Create Time
                            </th>
                            <th>
                                Last Update
                            </th>
                            <th>
                                Body Types
                            </th>
                        </tr>
                    </thead>
                    <tbody>


                        <tr>
                            <td>
                                @Model.Id
                            </td>
                            <td>
                                @Model.Name
                            </td>
                            <td>
                                @Model.CreatedAt.ToString("dd MMMM yyyy hh:mm tt")
                            </td>
                            <td>
                                @if (Model.UpdatedAt is null)
                                {
                                    <p>No update yet</p>
                                }
                                else
                                {
                                    @Model.UpdatedAt.Value.ToString("dd MMMM yyyy hh:mm tt")
                                }
                            </td>
                            <td>
                                @foreach (BodyTypeCategory type in Model.BodyTypeCategories)
                                {
                                    <p>@type.BodyType.Name</p>
                                }
                            </td>

                        </tr>


                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>


