@model IEnumerable<Category>
@{
    int count = (ViewBag.CurrentPage - 1) * 3;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Categories</h4>
            <a asp-controller="category" asp-action="create" class="btn btn-success">Create Category</a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Category item in Model)
                        {
                            count++;
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                    <img style="width:100px;height:60px;background-color: black;object-fit:cover" src="~/assets/images/select-form/@item.ImageUrl" />
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    <a asp-controller="category" asp-action="update" asp-route-id="@item.Id" class="btn btn-warning"><i class="mdi mdi-pen"></i></a>
                                    <a asp-controller="category" asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="mdi mdi-delete"></i></a>
                                    <a asp-controller="category" asp-action="details" asp-route-id="@item.Id" class="btn btn-info"><i class="mdi mdi-open-in-new"></i></a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>

            </div>
            <nav aria-label="...">
                <ul class="pagination pagination-lg">
                    @for (int i = 1; i <= ViewBag.TotalPage; i++)
                    {
                        <li class="page-item @((i==ViewBag.CurrentPage)?"disabled":"")">
                            <a class="page-link" asp-route-page="@i" tabindex="-1">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </div>
</div>

