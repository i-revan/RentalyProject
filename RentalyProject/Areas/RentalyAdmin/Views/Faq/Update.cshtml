@using RentalyProject.ViewModels.Faqs;
@model FaqVM
<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update Faq</h4>
                <a asp-controller="bodytype" asp-action="index" class="btn btn-dark my-2">Back</a>
                <form class="forms-sample" method="post">
                    <div class="form-group">
                        <label asp-for="Question">Question</label>
                        <input asp-for="Question" class="form-control" placeholder="Question">
                        <span class="text-danger" asp-validation-for="Question"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Answer">Answer</label>
                        <input asp-for="Answer" class="form-control" placeholder="Answer">
                        <span class="text-danger" asp-validation-for="Answer"></span>
                    </div>
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <button asp-controller="bodytype" asp-action="index" class="btn btn-light">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>
