@using RentalyProject.ViewModels.Models;
@model ModelVM
<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update Marka</h4>
                <a asp-controller="model" asp-action="index" class="btn btn-dark my-2">Back</a>
                <form class="forms-sample" method="post">
                    <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <input asp-for="Name" placeholder="Name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <select asp-for="MarkaId" class="form-control" asp-items="new SelectList(ViewBag.Markas,nameof(Marka.Id),nameof(Marka.Name))">
                        </select>
                        <span class="text-danger" asp-validation-for="MarkaId"></span>
                    </div>
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <button asp-controller="model" asp-action="index" class="btn btn-light">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>

